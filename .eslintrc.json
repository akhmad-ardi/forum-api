{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": [
    "node_modules/**"
  ],
  "overrides": [
    {
      "files": ["**/*.test.js", "tests/**", "__tests__/**"],
      "rules": {
        "no-undef": "off",
        "camelcase": "off"
      }
    }
  ],
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "always-multiline"],
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "quotes": ["error", "single"],
    "no-unused-vars": "off"
  }
}
