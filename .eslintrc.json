{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": [
    "**/*.test.js",
    "tests/**",
    "__tests__/**"
  ],
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "always-multiline"],
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "quotes": "off",
    "no-unused-vars": "off"
  }
}
